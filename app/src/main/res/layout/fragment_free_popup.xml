<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="?attr/colorBackground1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_msg"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:textColor="?attr/colorText1"
            android:text=""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/txt_msg"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:id="@+id/btn_go_premium"
            android:background="@drawable/bg_button_free_popup"
            fontPath="fonts/OpenSans-Bold.ttf"
            android:textColor="@android:color/white"
            android:text="@string/free_button_goto_premium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/btn_go_premium"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_go_premium"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_close"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_button_transparent"
            android:textColor="?attr/colorText1"
            android:text="Close"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/check_show_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_close"
            android:text="@string/never_show_again"
            android:textSize="12sp"
            android:textColor="?attr/colorText1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>

        <!--  <ImageView
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/btn_go_premium"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="0dp"
              android:id="@+id/btn_p_setting"
              android:src="@drawable/ic_menu_settings"/>-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>

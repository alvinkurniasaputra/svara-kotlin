<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:keepScreenOn="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="?attr/colorBackground1"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:keepScreenOn="true"
        android:id="@+id/cover"/>
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/transparent_40"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/text_loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white_grey"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1"
        android:text="uploading..." />

    <SeekBar
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/loading_seekbar"
        android:padding="0dp"
        android:background="@drawable/bg_loading_green_blue"
        android:progressDrawable="@drawable/bg_seekbar_progress"
        android:thumb="@drawable/ic_loading_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/seek_bar"/>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/loading_seekbar"
        android:gravity="center"
        android:id="@+id/text_percent"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="64%"/>

</androidx.constraintlayout.widget.ConstraintLayout>

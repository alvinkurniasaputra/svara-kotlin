<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid
                android:color="@color/transparent_2"/>
            <padding android:bottom="1dp"/>
            <size
                android:width="36dp"
                android:height="8dp"/>
        </shape>
    </item>

    <item>
        <ripple android:color="@color/transparent_1">
            <item>
                <shape
                    android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid
                        android:color="?attr/colorPrimary"/>

                    <size
                        android:width="36dp"
                        android:height="8dp"/>
                </shape>
            </item>
        </ripple>

    </item>
</layer-list>
